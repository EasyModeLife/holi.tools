---
/**
 * NotificationPortal.astro - A minimal toast system
 */
---

<div id="notification-portal" class="notification-portal"></div>

<script>
  function createToast(message: string, duration = 3000) {
    const portal = document.getElementById('notification-portal');
    if (!portal) return;

    const toast = document.createElement('div');
    toast.className = 'toast-pill glass-morphism';
    toast.innerHTML = `
      <span class="toast-message">${message}</span>
    `;

    portal.appendChild(toast);

    // Trigger animation
    setTimeout(() => toast.classList.add('is-visible'), 10);

    // Remove after duration
    setTimeout(() => {
      toast.classList.remove('is-visible');
      setTimeout(() => toast.remove(), 400);
    }, duration);
  }

  // Expose to window
  (window as any).showToast = createToast;
</script>

<style>
  .notification-portal {
    position: fixed;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    pointer-events: none;
  }

  .toast-pill {
    padding: 8px 20px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    color: white;
    font-size: 13px;
    font-weight: 500;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    transition: all 0.4s cubic-bezier(0.2, 0, 0, 1);
    pointer-events: auto;
  }

  .toast-pill.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .toast-message {
    display: flex;
    align-items: center;
    gap: 8px;
  }
</style>
