---
/**
 * GlassHeader.astro - Shared glass morphism header component
 *
 * Props:
 * - leftIcon: Material icon name for left button (default: "description")
 * - leftId: ID for left button
 * - leftTitle: Title/tooltip for left button
 * - leftOnClick: Optional click handler name
 * - centerHref: URL for center link (default: "https://holi.tools")
 * - centerIcon: Icon/emoji for center (default: "☭")
 * - centerLabel: Label for center link (default: "More Tools")
 * - rightIcon: Material icon name for right button (default: "help_outline")
 * - rightId: ID for right button
 * - rightTitle: Title/tooltip for right button
 * - rightOnClick: Optional click handler name
 */

interface Props {
  leftIcon?: string;
  leftId?: string;
  leftTitle?: string;
  leftOnClick?: string;
  centerHref?: string;
  centerIcon?: string;
  centerLabel?: string;
  rightIcon?: string;
  rightId?: string;
  rightTitle?: string;
  rightOnClick?: string;
}

const {
  leftIcon = "menu",
  leftId = "btn-left",
  leftTitle = "Menu",
  leftOnClick,
  centerHref = "https://holi.tools",
  centerIcon = "☭",
  centerLabel = "More Tools",
  rightIcon = "language",
  rightId = "btn-right",
  rightTitle = "Language",
  rightOnClick,
} = Astro.props;
---

<header class="glass-header" id="glass-header">
  <button
    class="header-btn"
    id={leftId}
    title={leftTitle}
    onclick={leftOnClick}
  >
    <span class="icon">{leftIcon}</span>
  </button>

  <a href={centerHref} class="header-center" title={centerLabel}>
    <span class="header-logo">{centerIcon}</span>
    <span class="header-title">{centerLabel}</span>
  </a>

  <button
    class="header-btn"
    id={rightId}
    title={rightTitle}
    onclick={rightOnClick}
  >
    <span class="icon">{rightIcon}</span>
  </button>
</header>

<style>
  /* === GLASS HEADER === */
  .glass-header {
    position: fixed;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    width: auto;
    min-width: 320px;
    max-width: 90vw;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 12px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    transition:
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.3s ease;
    gap: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (prefers-color-scheme: dark) {
    .glass-header {
      background: rgba(24, 24, 27, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  .glass-header.hidden {
    transform: translate(-50%, -150%);
    opacity: 0;
    pointer-events: none;
  }

  .header-btn {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: transparent;
    border: 1px solid rgba(127, 127, 127, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text, #1a1a1a);
    cursor: pointer;
    transition: all 0.2s;
    font-family: "Material Icons", sans-serif;
    font-size: 20px;
  }

  @media (prefers-color-scheme: dark) {
    .header-btn {
      color: rgba(255, 255, 255, 0.8);
    }
  }

  .header-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-accent, #8f00ff);
    border-color: rgba(127, 127, 127, 0.4);
  }

  .header-btn .icon {
    font-size: 20px;
  }

  .header-center {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--color-text, #1a1a1a);
    padding: 6px 14px;
    border-radius: 10px;
    transition: all 0.2s;
  }

  @media (prefers-color-scheme: dark) {
    .header-center {
      color: rgba(255, 255, 255, 0.9);
    }
  }

  .header-center:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  .header-logo {
    font-size: 20px;
    line-height: 1;
  }

  .header-title {
    font-size: 14px;
    font-weight: 500;
    color: var(--color-text, #1a1a1a);
    opacity: 0.8;
  }

  @media (prefers-color-scheme: dark) {
    .header-title {
      color: rgba(255, 255, 255, 0.7);
    }
  }

  @media (max-width: 640px) {
    .glass-header {
      min-width: 280px;
      padding: 6px 10px;
      gap: 12px;
    }

    .header-btn {
      width: 32px;
      height: 32px;
    }

    .header-title {
      display: none;
    }
  }
</style>
