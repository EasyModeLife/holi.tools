---
/**
 * PropertyTable.astro - Documentation table for component properties
 * 
 * Props:
 * - data: Array of { name, type, description }
 */
interface Property {
  name: string;
  type: string;
  description: string;
}

interface Props {
  properties: Property[];
}

const { properties } = Astro.props;
---

<div class="property-table-wrapper glass-morphism">
  <table class="property-table">
    <thead>
      <tr>
        <th>Property</th>
        <th>Type</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      {properties.map((prop) => (
        <tr>
          <td class="prop-name">
            <code class="copy-hint" onclick={`window.showToast && window.showToast('Copied: ${prop.name}'); navigator.clipboard.writeText('${prop.name}')`}>
              {prop.name}
            </code>
          </td>
          <td class="prop-type"><code>{prop.type}</code></td>
          <td class="prop-desc">{prop.description}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
  .property-table-wrapper {
    width: 100%;
    overflow-x: auto;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: rgba(255, 255, 255, 0.02);
  }

  .property-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 13px;
    text-align: left;
  }

  .property-table th {
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.03);
    color: rgba(255, 255, 255, 0.5);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
  }

  .property-table td {
    padding: 14px 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    vertical-align: middle;
  }

  .prop-name code {
    color: var(--color-accent);
    background: rgba(var(--color-accent), 0.1);
    padding: 2px 6px;
    border-radius: 4px;
    cursor: copy;
    transition: all 0.2s ease;
  }

  .prop-name code:hover {
    filter: brightness(1.2);
    transform: translateY(-1px);
  }

  .prop-type code {
    color: rgba(255, 255, 255, 0.4);
  }

  .prop-desc {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
  }

  /* Interaction Hint */
  .copy-hint {
    position: relative;
  }
  
  .copy-hint::after {
    content: 'copy';
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 9px;
    background: var(--color-accent);
    color: white;
    padding: 1px 4px;
    border-radius: 3px;
    opacity: 0;
    transition: opacity 0.2s ease;
    pointer-events: none;
  }

  .copy-hint:hover::after {
    opacity: 1;
  }
</style>
