---
import Manual from "../components/Manual.astro";
import { getTranslations, languages } from "../i18n/translations";
import SimpleBackground from "@holi/ui/components/SimpleBackground.astro";
import DraggablePanel from "@holi/ui/components/DraggablePanel.astro";
import "../styles/app.css";

const lang = Astro.currentLocale || "en";
const t = getTranslations(lang);
import { testAppChangelog } from "@holi/configs/changelogs";

const changelog = testAppChangelog;
---

<SimpleBackground />

<!-- Showcase Draggable Panels -->
<DraggablePanel id="intro" title="âœ¨ System Status" initialX={50} initialY={100} sticky={true}>
  <p><strong>Bio-Minimalism Active</strong></p>
  <p style="margin-top: 8px; color: var(--text-secondary); font-size: 11px;">
    All layers are now synchronized. The void is stable. 
  </p>
  <div style="margin-top: 12px; height: 1px; background: rgba(255,255,255,0.05);"></div>
  <p style="margin-top: 12px; font-size: 10px; opacity: 0.5; font-mono">Kernel: 2.4.0-VOID</p>
</DraggablePanel>

<DraggablePanel
  id="backgrounds"
  title="ðŸŽ¨ Visual DNA"
  initialX={400}
  initialY={150}
  sticky={true}
>
  <ul style="padding-left: 0; list-style: none; margin: 0; font-size: 11px; space-y-2;">
    <li style="margin-bottom: 6px;">â†’ Deep Blur (24px)</li>
    <li style="margin-bottom: 6px;">â†’ Solid Void Background</li>
    <li>â†’ Window Control Logic</li>
  </ul>
</DraggablePanel>

<DraggablePanel
  id="qr-clean"
  title="ðŸ§¹ Maintenance"
  initialX={50}
  initialY={300}
  sticky={false}>
  <p style="font-size: 11px;">Redesigning the floating panel headers was successful. Centering in <code>GlassCard</code> has been restored.</p>
  <p style="margin-top: 8px; color: var(--color-accent); font-size: 10px;">Note: This panel is <strong>Unpinned</strong> (it scrolls with content).</p>
</DraggablePanel>

<DraggablePanel
  id="navigation"
  title="ðŸ§­ System Pages"
  initialX={400}
  initialY={300}
  sticky={true}
>
