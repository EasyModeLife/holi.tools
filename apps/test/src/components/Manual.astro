---
import BaseLayout from "@holi/ui/layouts/BaseLayout.astro";
import GlassCard from "@holi/ui/components/GlassCard.astro";

interface Props {
  // eslint-disable-next-line @typescript-eslint/no-explicit-any
  t: any;
  lang: string;
  // eslint-disable-next-line @typescript-eslint/no-explicit-any
  languages: any[];
  version?: string;
  changelog?: { version: string; date: string; changes: string[] }[];
}

const { t, lang, languages, version, changelog } = Astro.props;

// Demo data for colors section
const colors = [
  { name: "bg", var: "--color-bg" },
  { name: "text", var: "--color-text" },
  { name: "accent", var: "--color-accent" },
  { name: "border", var: "--color-border" },
];
---

<BaseLayout
  title={t.meta_title}
  description={t.meta_description}
  lang={lang}
  languages={languages}
  colorScheme="default"
  showCanvasGrid={false}
  version={version}
  changelog={changelog}
>
  <main class="min-h-[100dvh] pt-32 pb-20 px-4 md:px-12">
    <div class="max-w-5xl mx-auto space-y-32">
      <!-- Header -->
      <header class="text-center space-y-4">
        <h1
          class="text-7xl md:text-9xl font-black lowercase tracking-tighter text-white"
        >
          {t.title}
        </h1>
        <p class="text-xl text-white/40 font-light tracking-tight">{t.subtitle}</p>
      </header>

      <!-- Typography -->
      <section class="space-y-12">
        <h2 class="text-[10px] uppercase tracking-[0.4em] text-white/20 font-bold border-b border-white/5 pb-4">
          {t.sections.typography}
        </h2>
        <div class="grid gap-12">
          <div class="space-y-2">
            <span class="text-[9px] text-white/20 uppercase tracking-[0.2em]"
              >Display 01</span
            >
            <h1 class="text-6xl font-black text-white tracking-tighter lowercase">The quick brown fox</h1>
          </div>
          <div class="space-y-2">
            <span class="text-[9px] text-white/20 uppercase tracking-[0.2em]"
              >Display 02</span
            >
            <h2 class="text-4xl font-bold text-white tracking-tight">
              Jumps over the lazy dog
            </h2>
          </div>
          <div class="space-y-2">
            <span class="text-[9px] text-white/20 uppercase tracking-[0.2em]"
              >Body Text</span
            >
            <p class="text-xl leading-relaxed max-w-2xl text-white/60 font-light">
              We focus on the void. Precision over decoration.
            </p>
          </div>
        </div>
      </section>

      <!-- Colors -->
      <section class="space-y-12">
        <h2 class="text-[10px] uppercase tracking-[0.4em] text-white/20 font-bold border-b border-white/5 pb-4">
          {t.sections.colors}
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {
            colors.map((c) => (
              <div class="space-y-3">
                <div
                  class="h-24 rounded-2xl border border-white/10"
                  style={`background: var(${c.var})`}
                />
                <div class="px-1">
                  <p class="font-bold text-xs uppercase tracking-widest text-white/80">{c.name}</p>
                  <code class="text-[10px] text-white/20">{c.var}</code>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- GlassCard Component -->
      <section class="space-y-12">
        <h2 class="text-[10px] uppercase tracking-[0.4em] text-white/20 font-bold border-b border-white/5 pb-4">
          {t.sections.cards}
        </h2>

        <!-- Props Table -->
        <div class="overflow-x-auto text-xs border border-white/5 rounded-2xl bg-white/[0.01]">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-white/5">
                <th class="py-4 px-6 font-bold text-white/90">Prop</th>
                <th class="py-4 px-6 font-bold text-white/90">Type</th>
                <th class="py-4 px-6 font-bold text-white/90">Description</th>
              </tr>
            </thead>
            <tbody class="text-white/40">
              <tr class="border-t border-white/5">
                <td class="py-4 px-6"><code>clickable</code></td>
                <td class="py-4 px-6"><code>boolean</code></td>
                <td class="py-4 px-6 text-white/60">Enables border-focus interaction</td>
              </tr>
              <tr class="border-t border-white/5">
                <td class="py-4 px-6"><code>intensity</code></td>
                <td class="py-4 px-6"><code>number</code></td>
                <td class="py-4 px-6 text-white/60">Luminosity multiplier (0.5 to 2.0)</td>
              </tr>
              <tr class="border-t border-white/5">
                <td class="py-4 px-6"><code>variant</code></td>
                <td class="py-4 px-6"><code>'active'</code></td>
                <td class="py-4 px-6 text-white/60">Persistent accent boundary</td>
              </tr>
              <tr class="border-t border-white/5">
                <td class="py-4 px-6"><code>padding</code></td>
                <td class="py-4 px-6"><code>'none'|'sm'|'md'|'lg'</code></td>
                <td class="py-4 px-6 text-white/60">Internal spacing</td>
              </tr>
              <tr class="border-t border-white/5">
                <td class="py-4 px-6"><code>rounded</code></td>
                <td class="py-4 px-6"><code>'sm'|'md'|'lg'|'full'</code></td>
                <td class="py-4 px-6 text-white/60">Corner geometry</td>
              </tr>
            </tbody>
          </table>
        </div>

        <h3 class="text-xs uppercase tracking-[0.2em] text-white/30 font-bold mb-8">Examples</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <!-- 1. Pure Depth -->
          <GlassCard intensity={0.5}>
            <p class="font-bold text-white/90">Pure Depth</p>
            <p class="text-[10px] text-white/20 uppercase mt-1 tracking-widest">
              Intensity 0.5
            </p>
          </GlassCard>

          <!-- 2. High Density -->
          <GlassCard intensity={1.5}>
            <p class="font-bold text-white/90">High Density</p>
            <p class="text-[10px] text-white/20 uppercase mt-1 tracking-widest">
              Intensity 1.5
            </p>
          </GlassCard>

          <!-- 3. Active Boundary -->
          <GlassCard variant="active" accentColor="#818cf8">
            <p class="font-bold text-white/90">Active Boundary</p>
            <p class="text-[10px] text-white/20 uppercase mt-1 tracking-widest">
              Persistent light
            </p>
          </GlassCard>

          <!-- 4. Interactive -->
          <GlassCard clickable={true} href="/" accentColor="#f472b6">
            <p class="font-bold text-white/90">Interactive Link →</p>
            <p class="text-[10px] text-white/20 uppercase mt-1 tracking-widest">
              Internal routing
            </p>
          </GlassCard>

          <!-- 5. Pill Geometry -->
          <GlassCard
            rounded="full"
            padding="sm"
            clickable={true}
            accentColor="#38bdf8"
          >
            <p class="font-bold text-white/90 px-6">Pill Geometry</p>
          </GlassCard>

          <!-- 6. Reactive Toggle -->
          <GlassCard
            toggleable={true}
            toggleId="manual-toggle"
            accentColor="#fbbf24"
          >
            <p class="font-bold text-white/90" id="toggle-label">
              Reactive Toggle
            </p>
            <p class="text-[10px] text-white/20 uppercase mt-1 tracking-widest">
              Preserve state
            </p>
          </GlassCard>
        </div>

        <!-- Toggle Demo Script -->
        <p class="text-xs text-white/20 mt-8 text-center uppercase tracking-[0.2em]" id="toggle-status">
          Interact with "Reactive Toggle" to verify state logic
        </p>
        <script>
          document.addEventListener("card-toggled", (e: any) => {
            if (e.detail.id === "manual-toggle") {
              const status = document.getElementById("toggle-status");
              if (status) {
                status.textContent = e.detail.toggled
                  ? "✓ State: Active"
                  : "○ State: Idle";
                status.style.color = e.detail.toggled ? "var(--color-accent)" : "rgba(255,255,255,0.2)";
              }
            }
          });
        </script>
      </section>

      <!-- Buttons -->
      <section class="space-y-12">
        <h2 class="text-[10px] uppercase tracking-[0.4em] text-white/20 font-bold border-b border-white/5 pb-4">
          {t.sections.buttons}
        </h2>
        <div class="flex flex-wrap gap-6 items-center">
          <button class="btn-save">
            Primary Action
          </button>
          <button class="btn-reset">
            Secondary / Reset
          </button>
          
          <a href="/" class="text-sm font-medium">Internal Link</a>
          <a href="https://google.com" target="_blank" class="text-sm font-medium">External Gateway</a>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
