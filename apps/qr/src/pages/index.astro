<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>qr - Holi.tools</title>
  </head>
  <body
    class="bg-background text-foreground min-h-screen flex flex-col items-center justify-center gap-4"
  >
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">qr</h1>
      <p class="text-muted-foreground">Generated by Holi.tools CLI</p>
    </div>
    <div class="flex flex-col items-center gap-4 w-full max-w-md">
      <input
        type="text"
        id="qr-input"
        placeholder="Type URL here..."
        class="w-full p-2 border-2 border-black font-bold text-center"
        value="https://holi.tools"
      />
      <div
        id="qr-result"
        class="border-2 border-black p-4 bg-white shadow-[4px_4px_0px_#000]"
      >
        <!-- QR SVG will appear here -->
      </div>
      <holi-button id="generate-btn">Generate QR (Rust/WASM)</holi-button>
    </div>

    <script>
      import "@holi/ui/components/button";
      import init, { generate_qr_svg } from "@holi/wasm-core";

      const input = document.getElementById("qr-input") as HTMLInputElement;
      const container = document.getElementById("qr-result");
      const btn = document.getElementById("generate-btn");

      async function generate() {
        if (!input || !container) return;
        const text = input.value || "https://holi.tools";
        const svg = generate_qr_svg(text);
        container.innerHTML = svg;
        // Make SVG responsive
        const svgEl = container.querySelector("svg");
        if (svgEl) {
          svgEl.style.width = "100%";
          svgEl.style.height = "auto";
        }
      }

      (async () => {
        await init();
        generate(); // Initial generation

        btn?.addEventListener("click", generate);
        input?.addEventListener("input", generate);
      })();
    </script>
  </body>
</html>
