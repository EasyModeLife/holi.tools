---
import {
  BODY_SHAPES,
  EYE_FRAME_SHAPES,
  EYE_BALL_SHAPES,
} from "../../lib/qr-styles-config";

/**
 * ShapesPanel.astro - Geometry customization for QR Code
 * Extracted from StylePanel
 */
---

<div class="advanced-content">
  <!-- Body Shape -->
  <div class="shape-section">
    <label class="section-label">Body Shape</label>
    <div class="shape-grid">
      {
        BODY_SHAPES.map((shape) => (
          <button
            class="shape-btn"
            data-bodyshape={shape.id}
            onclick={`setBodyShape('${shape.id}')`}
            title={shape.label}
          >
            <svg viewBox="0 0 20 20" set:html={shape.svgInner} />
          </button>
        ))
      }
    </div>
  </div>

  <hr class="separator" />

  <!-- Eye Frame Shape -->
  <div class="shape-section">
    <label class="section-label">Eye Frame</label>
    <div class="shape-grid">
      {
        EYE_FRAME_SHAPES.map((shape) => (
          <button
            class="shape-btn"
            data-eyeframe={shape.id}
            onclick={`setEyeFrame('${shape.id}')`}
            title={shape.label}
          >
            <svg viewBox="0 0 20 20" set:html={shape.svgInner} />
          </button>
        ))
      }
    </div>
  </div>

  <!-- Eye Ball Shape -->
  <div class="shape-section">
    <label class="section-label">Eye Ball</label>
    <div class="shape-grid">
      {
        EYE_BALL_SHAPES.map((shape) => (
          <button
            class="shape-btn"
            data-eyeball={shape.id}
            onclick={`setEyeBall('${shape.id}')`}
            title={shape.label}
          >
            <svg viewBox="0 0 20 20" set:html={shape.svgInner} />
          </button>
        ))
      }
    </div>
  </div>
</div>

<script is:inline>
  // Helper to mark active buttons (reused logic)
  function setActive(group, val) {
    document.querySelectorAll(`button[data-${group}]`).forEach((b) => {
      if (b.dataset[group] === val) b.classList.add("active");
      else b.classList.remove("active");
    });
  }

  // Hook into global events if needed
  window.addEventListener("qr-config-loaded", (e) => {
    // Update active states
  });
</script>

<style>
  .advanced-content {
    /* Removed padding to fit panel better, padding handled by container? */
    /* Checks EditorCanvas panel styles */
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .separator {
    border: 0;
    height: 1px;
    background: rgba(127, 127, 127, 0.15);
    margin: 4px 0;
  }

  .shape-section {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .section-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--text-muted, rgba(127, 127, 127, 0.7));
    letter-spacing: 0.5px;
  }

  .shape-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 6px;
  }

  .shape-btn {
    aspect-ratio: 1;
    background: rgba(127, 127, 127, 0.08);
    border: 1px solid rgba(127, 127, 127, 0.15);
    border-radius: 8px;
    color: var(--text-main, rgba(255, 255, 255, 0.7));
    cursor: pointer;
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px;
  }

  @media (prefers-color-scheme: dark) {
    .shape-btn {
      color: rgba(255, 255, 255, 0.7);
    }
  }

  .shape-btn svg {
    width: 18px;
    height: 18px;
  }

  .shape-btn:hover {
    background: rgba(127, 127, 127, 0.2);
    color: var(--text-main, white);
    transform: scale(1.05);
  }

  .shape-btn.active {
    background: var(--accent-primary, #6366f1);
    color: white;
    border-color: transparent;
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  }
</style>
