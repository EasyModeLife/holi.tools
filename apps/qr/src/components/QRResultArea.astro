---
import ActionToolbar from "./ActionToolbar.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

/**
 * QRResultArea.astro - Display area for the generated QR Code
 *
 * Includes:
 * - QR rendering frame
 * - Action Toolbar (Download, Copy, Reset, Verify)
 */
---

<div class="qr-result-wrapper" id="qr-result-wrapper">
  <!-- Action buttons ABOVE QR -->
  <ActionToolbar />

  <!-- QR Code centered -->
  <div class="qr-frame-main" id="qr-frame">
    <!-- SVG Target (Rendered by WASM-SVG) -->
    <div
      id="qr-svg-target"
      style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;"
    >
    </div>
  </div>

  <!-- Customization Tools BELOW QR -->
  <div class="tool-bar">
    <button class="tool-btn" id="tool-color" title={t("panel.colors")}>
      <span class="icon">palette</span>
      <span class="tool-label">{t("panel.colors")}</span>
    </button>
    <button class="tool-btn" id="tool-shapes" title={t("panel.shapes")}>
      <span class="icon">category</span>
      <span class="tool-label">{t("editor.shapes")}</span>
    </button>
    <button class="tool-btn" id="tool-effect" title={t("panel.effects")}>
      <span class="icon">auto_awesome</span>
      <span class="tool-label">{t("editor.style")}</span>
    </button>
    <button class="tool-btn" id="tool-image" title={t("panel.image")}>
      <span class="icon">add_photo_alternate</span>
      <span class="tool-label">{t("editor.image")}</span>
    </button>
    <button class="tool-btn" id="tool-advanced" title={t("panel.advanced")}>
      <span class="icon">settings</span>
      <span class="tool-label">{t("panel.advanced")}</span>
    </button>
  </div>
</div>

<style>
  /* QR RESULT */
  .qr-result-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-top: 20px;

    /* Hidden state (default) */
    opacity: 0;
    transform: scale(0.8) translateY(20px);
    position: absolute;
    pointer-events: none;
    transition: all 0.6s ease-out;
    transition-delay: 0.4s;
  }

  /* Visible state (when parent has .generating) */
  :global(.canvas-container.generating) .qr-result-wrapper {
    opacity: 1;
    transform: scale(1) translateY(0);
    position: relative;
    pointer-events: auto;
  }

  .qr-frame-main {
    width: 280px;
    height: 280px;
    background: white;
    border-radius: 24px;
    padding: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    transition:
      background 0.3s,
      box-shadow 0.3s;
    position: relative; /* For GPU overlay */
  }

  .qr-frame-main.transparent-bg {
    background: transparent;
    box-shadow: none;
    background-image:
      linear-gradient(45deg, rgba(127, 127, 127, 0.2) 25%, transparent 25%),
      linear-gradient(-45deg, rgba(127, 127, 127, 0.2) 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, rgba(127, 127, 127, 0.2) 75%),
      linear-gradient(-45deg, transparent 75%, rgba(127, 127, 127, 0.2) 75%);
    background-size: 16px 16px;
    background-position:
      0 0,
      0 8px,
      8px -8px,
      -8px 0px;
    border: 1px dashed rgba(127, 127, 127, 0.3);
  }
  .qr-frame-main svg {
    width: 100%;
    height: 100%;
  }

  /* === Toolbox bar (below QR) === */
  .tool-bar {
    display: flex;
    gap: 4px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    padding: 8px 12px;
    margin-top: 20px;
  }

  @media (prefers-color-scheme: dark) {
    .tool-bar {
      background: rgba(24, 24, 27, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }
  }

  .tool-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 12px 16px;
    background: transparent;
    border: 2px solid transparent;
    border-radius: 12px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    user-select: none;
    -webkit-user-select: none;
  }

  /* GPU Overlay Styles */
  .gpu-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 5;
    pointer-events: none; /* Pass clicks */
    border-radius: 20px; /* Match parent slightly less */
    overflow: hidden;
  }
  #gpu-canvas {
    width: 100%;
    height: 100%;
  }

  .tool-btn:hover {
    color: var(--text-main);
    border-color: rgba(127, 127, 127, 0.3);
  }

  .tool-btn.active {
    border-color: var(--color-accent, #22c55e);
    color: var(--color-accent, #22c55e);
  }

  .tool-btn .icon {
    font-size: 24px;
  }

  .tool-label {
    font-size: 11px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (max-width: 640px) {
    .tool-bar {
      padding: 6px 8px;
    }
    .tool-label {
      display: none;
    }
    .tool-btn {
      padding: 10px;
    }
    .tool-btn .icon {
      font-size: 20px;
    }
  }
</style>
