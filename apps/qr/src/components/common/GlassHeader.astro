---
/**
 * GlassHeader.astro - Reusable floating glass header component
 *
 * Props:
 * - leftIcon: Material icon name for left button (default: "description")
 * - leftId: ID for left button (default: "btn-tech-spec")
 * - leftTitle: Title/tooltip for left button
 * - centerHref: URL for center link (default: "https://holi.tools")
 * - centerIcon: Icon/emoji for center (default: "☭")
 * - centerLabel: Label for center link (default: "More Tools")
 * - rightIcon: Material icon name for right button (default: "help_outline")
 * - rightId: ID for right button (default: "btn-about")
 * - rightTitle: Title/tooltip for right button
 */

interface Props {
  leftIcon?: string;
  leftId?: string;
  leftTitle?: string;
  centerHref?: string;
  centerIcon?: string;
  centerLabel?: string;
  rightIcon?: string;
  rightId?: string;
  rightTitle?: string;
}

const {
  leftIcon = "description",
  leftId = "btn-tech-spec",
  leftTitle = "Technical Specification",
  centerHref = "https://holi.tools",
  centerIcon = "☭",
  centerLabel = "More Tools",
  rightIcon = "help_outline",
  rightId = "btn-about",
  rightTitle = "About",
} = Astro.props;
---

<header class="glass-header" id="app-header">
  <button class="header-btn" id={leftId} title={leftTitle}>
    <span class="icon">{leftIcon}</span>
  </button>

  <a href={centerHref} class="header-center" title={centerLabel}>
    <span class="header-logo">{centerIcon}</span>
    <span class="header-title">{centerLabel}</span>
  </a>

  <button class="header-btn" id={rightId} title={rightTitle}>
    <span class="icon">{rightIcon}</span>
  </button>
</header>

<style>
  /* === GLASS HEADER === */
  .glass-header {
    position: fixed;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    width: auto;
    min-width: 320px;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px 12px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    transition:
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.3s ease;
    gap: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  @media (prefers-color-scheme: dark) {
    .glass-header {
      background: rgba(24, 24, 27, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  .glass-header.hidden {
    transform: translate(-50%, -150%);
    opacity: 0;
    pointer-events: none;
  }

  .header-btn {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: transparent;
    border: 1px solid var(--border-main);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
  }

  .header-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-main);
    border-color: var(--text-secondary);
  }

  .header-btn .icon {
    font-size: 20px;
  }

  .header-center {
    display: flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    color: var(--text-main);
    padding: 6px 14px;
    border-radius: 10px;
    transition: all 0.2s;
  }

  .header-center:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  .header-logo {
    font-size: 20px;
    line-height: 1;
  }

  .header-title {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-secondary);
  }
</style>
