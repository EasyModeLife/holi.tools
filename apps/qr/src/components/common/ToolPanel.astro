---
/**
 * ToolPanel.astro - Floating tool panel using shared GlassCard
 *
 * Props:
 * - id: Panel identifier (e.g., "color", "style")
 * - title: Panel title text
 * - initialX: Initial X position (optional)
 * - initialY: Initial Y position (optional)
 */

import GlassCard from "@holi/ui/components/GlassCard.astro";
import Icon from "@holi/ui/components/Icon.astro";

const { id, title, initialX = 100, initialY = 150 } = Astro.props;

import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="tool-panel"
  id={`panel-${id}`}
  style={`display:none; left:${initialX}px; top:${initialY}px;`}
>
  <GlassCard padding="none" rounded="md" class="panel-card">
    <header class="panel-header drag-handle">
      <span class="panel-title">{title}</span>
      <button
        class="panel-close"
        onclick={`closePanel('${id}')`}
        aria-label={t("common.close")}
      >
        <Icon name="x" size={16} />
      </button>
    </header>
    <div class="panel-content">
      <slot />
    </div>
  </GlassCard>
</div>

<style>
  .tool-panel {
    position: absolute;
    z-index: 100;
    min-width: 240px;
    animation: panelIn 0.3s ease-out;
  }

  @keyframes panelIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(8px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Override GlassCard for this context */
  :global(.panel-card) {
    width: 100%;
  }

  .panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 14px;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    cursor: grab;
    user-select: none;
  }

  .panel-header:active {
    cursor: grabbing;
  }

  .panel-title {
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text, inherit);
  }

  .panel-close {
    width: 24px;
    height: 24px;
    border-radius: 6px;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.15s;
    padding: 0;
  }

  .panel-close:hover {
    background: rgba(255, 100, 100, 0.2);
    color: #ff6b6b;
  }

  .panel-close .icon {
    opacity: 0.8;
  }

  .panel-content {
    padding: 14px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  @media (prefers-color-scheme: light) {
    .panel-header {
      background: rgba(0, 0, 0, 0.03);
      border-bottom-color: rgba(0, 0, 0, 0.1);
    }

    .panel-close {
      color: rgba(0, 0, 0, 0.4);
    }
  }
</style>
