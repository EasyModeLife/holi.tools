---
/**
 * DraggablePanel.astro - Reusable floating glass panel with drag functionality
 *
 * Props:
 * - id: Panel identifier (e.g., "color", "style")
 * - title: Panel title text
 * - side: "left" | "right" - preferred placement side (default: "right")
 * - initialX: Initial X position (optional)
 * - initialY: Initial Y position (optional)
 *
 * Usage:
 * <DraggablePanel id="color" title="Colors">
 *   <ColorPicker />
 * </DraggablePanel>
 */

interface Props {
  id: string;
  title: string;
  side?: "left" | "right";
  initialX?: number;
  initialY?: number;
}

const {
  id,
  title,
  side = "right",
  initialX = 100,
  initialY = 150,
} = Astro.props;
---

<div
  class="tool-panel glass-panel"
  id={`panel-${id}`}
  data-side={side}
  style={`display:none; left:${initialX}px; top:${initialY}px;`}
>
  <div class="panel-header drag-handle">
    <span class="panel-title">{title}</span>
    <button class="panel-close" onclick={`closePanel('${id}')`}>Ã—</button>
  </div>
  <div class="panel-content">
    <slot />
  </div>
</div>

<style>
  /* === FLOATING GLASS PANELS === */
  .tool-panel {
    position: absolute;
    z-index: 100;
    min-width: 240px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: panelIn 0.3s ease-out;
  }

  @keyframes panelIn {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .glass-panel {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  @media (prefers-color-scheme: dark) {
    .glass-panel {
      background: rgba(24, 24, 27, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }
  }

  .panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    cursor: grab;
    user-select: none;
  }

  .panel-header:active {
    cursor: grabbing;
  }

  .panel-title {
    font-size: 14px;
    font-weight: 600;
    color: white;
  }

  @media (prefers-color-scheme: light) {
    .panel-title {
      color: var(--text-main, #18181b);
    }
  }

  .panel-close {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: rgba(255, 255, 255, 0.6);
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .panel-close:hover {
    background: rgba(255, 100, 100, 0.3);
    color: white;
  }

  .panel-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
</style>
