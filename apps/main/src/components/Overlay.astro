<div id="OverlaySystem" class="overlay-container">
  <div id="OverlayContent" class="overlay-card">
    <div class="close-overlay" id="CloseOverlay">&times;</div>
    <div id="OverlayBody">
      <!-- Dynamic content here -->
    </div>
  </div>
</div>

<style>
  .overlay-container {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    z-index: 1000;
    display: none;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .overlay-container.active {
    display: flex;
  }

  .overlay-card {
    background: var(--color-card-bg);
    border: 4px solid var(--color-border);
    padding: 3rem;
    max-width: 800px;
    width: 100%;
    position: relative;
    box-shadow: 20px 20px 0px var(--color-border);
    color: var(--color-text);
  }

  .close-overlay {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    font-size: 3rem;
    font-weight: 900;
    cursor: pointer;
    line-height: 1;
    transition: transform 0.2s ease;
    color: var(--color-text);
  }

  .close-overlay:hover {
    transform: scale(1.1);
  }

  #OverlayBody {
    width: 100%;
  }
</style>
