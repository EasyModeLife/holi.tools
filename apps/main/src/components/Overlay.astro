<div id="OverlaySystem" class="overlay-container">
  <div id="OverlayContent" class="overlay-card">
    <div class="close-overlay" id="CloseOverlay">&times;</div>
    <div id="OverlayBody">
      <!-- Dynamic content here -->
    </div>
  </div>
</div>

<style>
  .overlay-container {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    z-index: 1000;
    display: none;
    justify-content: center;
    align-items: center;
    padding: 2rem;
  }

  .overlay-container.active {
    display: flex;
  }

  .overlay-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 24px;
    padding: 3rem;
    max-width: 800px;
    width: 100%;
    position: relative;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    color: var(--color-text);
  }

  @media (prefers-color-scheme: dark) {
    .overlay-card {
      background: rgba(24, 24, 27, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }
  }

  .close-overlay {
    position: absolute;
    top: 1rem;
    right: 1.5rem;
    font-size: 3rem;
    font-weight: 900;
    cursor: pointer;
    line-height: 1;
    transition: transform 0.2s ease;
    color: var(--color-text);
  }

  .close-overlay:hover {
    transform: scale(1.1);
  }

  #OverlayBody {
    width: 100%;
  }
</style>
