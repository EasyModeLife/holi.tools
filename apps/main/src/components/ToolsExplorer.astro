---
import { getTranslations } from "../i18n/translations";
const lang = Astro.currentLocale || "es";
const t = getTranslations(lang);
---

<main id="ToolsExplorer" class="tools-menu-section">
  <div class="tools-grid">
    <div class="tool-card">
      <span class="tool-name" data-i18n="tool1_name">
        {t.tool1_name}
        <span
          class="theme-trigger"
          onclick="event.stopPropagation(); window.toggleTheme && window.toggleTheme()"
          >üñåÔ∏è</span
        >
      </span>
      <span class="tool-desc" data-i18n="tool1_desc">{t.tool1_desc}</span>
    </div>
    <div class="tool-card">
      <span class="tool-name" data-i18n="tool2_name">{t.tool2_name}</span>
      <span class="tool-desc" data-i18n="tool2_desc">{t.tool2_desc}</span>
    </div>
    <div class="tool-card">
      <span class="tool-name" data-i18n="tool3_name">{t.tool3_name}</span>
      <span class="tool-desc" data-i18n="tool3_desc">{t.tool3_desc}</span>
    </div>
    <div class="tool-card">
      <span class="tool-name" data-i18n="tool4_name">{t.tool4_name}</span>
      <span class="tool-desc" data-i18n="tool4_desc">{t.tool4_desc}</span>
    </div>
  </div>
</main>

<style>
  .tools-menu-section {
    min-height: 50dvh;
    background: var(--color-bg);
    padding: 4rem 5%;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: background-color 0.3s ease;
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    width: 100%;
    max-width: 1400px;
  }

  .tool-card {
    background: var(--color-card-bg);
    border: 2px solid var(--color-border);
    padding: 2.5rem;
    transition: all 0.2s ease;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
    text-decoration: none;
    color: var(--color-text);
  }

  .tool-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0px var(--color-border);
    border-color: var(--color-border);
  }

  .tool-name {
    font-weight: 900;
    font-size: 3rem;
    letter-spacing: -0.04em;
    line-height: 0.9;
    text-transform: lowercase;
    color: var(--color-text);
  }

  .tool-desc {
    font-size: 1.125rem;
    color: var(--color-text);
    font-weight: 400;
    opacity: 0.8;
  }

  .theme-trigger {
    cursor: pointer;
    font-size: 0.6em;
    margin-left: 10px;
    vertical-align: middle;
    transition: transform 0.2s;
    display: inline-block;
  }

  .theme-trigger:hover {
    transform: scale(1.3) rotate(15deg);
  }

  @media (max-width: 640px) {
    .tools-menu-section {
      padding: 2rem 1rem;
    }
    .tools-grid {
      gap: 1rem;
    }
    .tool-card {
      padding: 1.5rem;
    }
    .tool-name {
      font-size: 2rem;
    }
  }
</style>
