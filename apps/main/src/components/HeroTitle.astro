---
import { getTranslations } from "../i18n/translations";
const lang = Astro.currentLocale || "es";
const t = getTranslations(lang);
---

<div id="HeroTitle" class="title-section">
  <h1 data-i18n="hero_title">{t.hero_title}</h1>
  <p class="slogan" data-i18n="hero_slogan">{t.hero_slogan}</p>
</div>

<style>
  .title-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 0;
    width: 100%;
    margin-bottom: 4rem; /* Add breathing room */
  }

  h1 {
    font-size: clamp(3rem, 15vw, 11rem); /* Slightly adjusted for better scaling */
    font-weight: 900;
    letter-spacing: -0.06em;
    margin: 0;
    line-height: 0.85;
    text-transform: lowercase;
    padding: 0.2rem 1.5rem; /* Large horizontal padding to avoid glyph clipping */
    overflow: visible;
    width: fit-content;
    
    /* RGB Spectrum Gradient Logic */
    color: transparent;
    background-clip: text;
    -webkit-background-clip: text;
    background-image: linear-gradient(
      135deg,
      #ff5e5e 0%,   /* Red */
      #ffc75e 25%,  /* Yellow-ish */
      #5eff8f 50%,  /* Green-ish */
      #5ebaff 75%,  /* Blue-ish */
      #c65eff 100%  /* Violet */
    );
    /* Alternative more subtle RGB: 
       background-image: linear-gradient(to right, #ff0000, #00ff00, #0000ff); 
       But spectrum looks better on dark */
  }

  .slogan {
    font-size: clamp(0.9rem, 2.5vw, 1.25rem);
    font-weight: 500;
    color: var(--color-text);
    opacity: 0.6; /* Higher contrast but still subtle */
    margin: 1.5rem 0 0 0;
    letter-spacing: -0.01em;
    max-width: 600px;
  }
</style>
