---
import ValueCard from "./ValueCard.astro";
import { getTranslations } from "../i18n/translations";

const lang = Astro.currentLocale || "es";
const t = getTranslations(lang);
---

<div id="HeroValues" class="props-section">
  <ValueCard
    id="privacy"
    title={t.val1_title}
    desc={t.val1_desc}
    i18nTitle="val1_title"
    i18nDesc="val1_desc"
  />
  <ValueCard
    id="simple"
    title={t.val2_title}
    desc={t.val2_desc}
    i18nTitle="val2_title"
    i18nDesc="val2_desc"
  />
  <ValueCard
    id="nocost"
    title={t.val3_title}
    desc={t.val3_desc}
    i18nTitle="val3_title"
    i18nDesc="val3_desc"
  />
  <ValueCard
    id="truelocal"
    title={t.val4_title}
    desc={t.val4_desc}
    i18nTitle="val4_title"
    i18nDesc="val4_desc"
  />
  <ValueCard
    id="opensource"
    title={t.val6_title}
    desc={t.val6_desc}
    i18nTitle="val6_title"
    i18nDesc="val6_desc"
    icon={`<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M7 8L3 12L7 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M17 8L21 12L17 16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 4L10 20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>`}
  />
  <ValueCard
    id="languages"
    title={t.val5_title}
    desc={t.val5_desc}
    i18nTitle="val5_title"
    i18nDesc="val5_desc"
    icon={`<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="1.5" /><path d="M2.5 12H21.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/><path d="M12 22C14.5 22 16 17.5 16 12C16 6.5 14.5 2 12 2C9.5 2 8 6.5 8 12C8 17.5 9.5 22 12 22Z" stroke="currentColor" stroke-width="1.5"/></svg>`}
  />
</div>

<style>
  .props-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    height: auto;
    padding: 1rem;
    gap: 1rem;
    box-sizing: border-box;
  }

  @media (max-width: 640px) {
    .props-section {
      padding: 0.5rem;
      gap: 0.5rem;
    }
  }
</style>
