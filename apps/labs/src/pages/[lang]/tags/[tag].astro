---
import { getCollection } from "astro:content";
import BaseLayout from "@holi/ui/layouts/BaseLayout.astro";
import GlassCard from "@holi/ui/components/GlassCard.astro";
import SimpleBackground from "@holi/ui/components/SimpleBackground.astro";
import {
  getLangFromUrl,
  useTranslations,
  languages,
} from "../../../i18n/utils";

import "/src/styles/app.css";

export async function getStaticPaths() {
  const experiments = await getCollection("experiments");
  const allTags = [...new Set(experiments.flatMap((e) => e.data.tags))];

  return languages.flatMap((l) => {
    return allTags.map((tag) => ({
      params: { lang: l.code, tag },
      props: {
        tag,
        experiments: experiments.filter(
          (e) => e.data.tags.includes(tag) && e.data.lang === l.code
        ),
      },
    }));
  });
}

const { tag, experiments } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  title={`#${tag} - ${t("meta_title")}`}
  description={t("meta_description")}
  lang={lang}
  languages={languages}
  colorScheme="labs"
>
  <SimpleBackground />

  <main class="container mx-auto px-4 py-20 relative z-10">
    <section class="max-w-4xl mx-auto text-center mb-16">
      <a
        href="/"
        class="inline-flex items-center gap-2 text-white/40 hover:text-white transition-colors text-sm uppercase tracking-widest mb-8"
      >
        <span class="material-icons text-sm">arrow_back</span>
        Labs
      </a>
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight text-white">
        <span class="text-white/40">#</span>{tag}
      </h1>
      <p class="text-lg text-white/50">
        {experiments.length}
        {experiments.length === 1 ? "experiment" : "experiments"}
      </p>
    </section>

    <section class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          experiments.map((exp: any) => (
            <GlassCard
              clickable
              padding="lg"
              rounded="lg"
              accentColor={exp.data.color}
              href={`/${lang}/experiments/${exp.slug.replace(/-[a-z]{2}$/, "")}`}
              class="group h-full"
            >
              <div
                class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 transition-transform group-hover:scale-110 group-hover:rotate-3"
                style={`background: ${exp.data.color}20; border: 1px solid ${exp.data.color}40; color: ${exp.data.color};`}
              >
                <span class="material-icons text-3xl">{exp.data.icon}</span>
              </div>
              <h3 class="text-2xl font-semibold mb-3 text-white/90">
                {exp.data.title}
              </h3>
              <p class="text-white/50 leading-relaxed font-light mb-4">
                {exp.data.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {exp.data.tags.map((t: string) => (
                  <span
                    class:list={[
                      "text-xs px-2 py-1 rounded-full",
                      t === tag
                        ? "bg-white/20 text-white"
                        : "bg-white/5 text-white/40",
                    ]}
                  >
                    #{t}
                  </span>
                ))}
              </div>
            </GlassCard>
          ))
        }
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  main {
    min-height: 100vh;
  }
</style>
