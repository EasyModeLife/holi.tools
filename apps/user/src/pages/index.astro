---
import VaultLayout from "../layouts/VaultLayout.astro";
import VaultDashboard from "../components/VaultDashboard.astro";

const lang = Astro.currentLocale || "en";
const basePath = lang === "en" ? "" : `/${lang}`;
---

<VaultLayout title="Holi Vault">
  <div class="flex flex-col items-center justify-center space-y-6">
    <div class="text-center mb-8">
      <div
        class="p-4 rounded-full bg-purple-500/10 text-purple-400 inline-block mb-4"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="48"
          height="48"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-shield-check"
          ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path><path
            d="m9 12 2 2 4-4"></path></svg
        >
      </div>

      <h1
        class="text-4xl font-bold tracking-tight sm:text-5xl bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600"
      >
        Holi Vault
      </h1>

      <p class="max-w-xl text-lg text-zinc-400 mt-2">
        Open your local folder to get started.
      </p>
    </div>

    <div class="w-full max-w-4xl">
      <VaultDashboard />
    </div>

    <div class="w-full max-w-4xl">
      <div class="mt-4 flex justify-center">
        <a
          href={`${basePath}/private`}
          class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg font-medium transition-colors text-zinc-200"
        >
          Private Chat (no vault required)
        </a>
      </div>
    </div>
  </div>
</VaultLayout>
