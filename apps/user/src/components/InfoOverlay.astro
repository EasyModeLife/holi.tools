---
interface Props {
  lang: string;
}

const { lang } = Astro.props;

const content =
  lang === "es"
    ? {
        title: "Sobre Holi Vault",
        body: "Holi Vault es un contenedor local-first para identidad y colaboración P2P. Tus datos viven en tu dispositivo: sin servidores, sin tracking y sin cuentas.",
      }
    : {
        title: "About Holi Vault",
        body: "Holi Vault is a local-first identity & P2P collaboration vault. Your data stays on your device: no servers, no tracking, no accounts.",
      };
---

<div class="info-overlay" id="overlay-info-about" style="display: none;">
  <div
    class="log-backdrop"
    onclick="window.closeOverlay && window.closeOverlay('info', 'about')"
  ></div>

  <aside class="log-drawer">
    <header class="log-header">
      <h2 class="log-title">{content.title}</h2>
      <button
        class="log-close-btn"
        onclick="window.closeOverlay && window.closeOverlay('info', 'about')"
        aria-label="Close"
      >
        ×
      </button>
    </header>

    <div class="log-body">
      <p class="info-text">{content.body}</p>
    </div>

    <footer class="log-footer">
      <p>holi.tools</p>
    </footer>
  </aside>
</div>

<style>
  /* Reuse ChangelogOverlay animation contract (log-backdrop/log-drawer) */
  .info-overlay {
    position: fixed;
    inset: 0;
    z-index: 10000;
    display: flex;
  }

  .info-text {
    margin: 0;
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary, rgba(26, 26, 26, 0.7));
  }

  @media (prefers-color-scheme: dark) {
    .info-text {
      color: var(--text-secondary, rgba(255, 255, 255, 0.7));
    }
  }

  .log-close-btn {
    font-size: 22px;
    line-height: 1;
    width: 36px;
    height: 36px;
    display: grid;
    place-items: center;
  }
</style>
