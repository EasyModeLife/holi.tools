---
import ToastContainer from "./ui/ToastContainer.astro";
import IdentityHeader from "./vault/IdentityHeader.astro";
import FriendsSection from "./vault/FriendsSection.astro";
import ProjectsSection from "./vault/ProjectsSection.astro";

// Modals
import FriendModal from "./vault/modals/FriendModal.astro";
import FriendInviteDialog from "./vault/modals/FriendInviteDialog.astro";
import IdentityModal from "./vault/modals/IdentityModal.astro";
import ProjectModals from "./vault/modals/ProjectModals.astro";
---

<main
  class="min-h-screen bg-black text-white font-sans selection:bg-purple-500/30"
>
  <ToastContainer />

  <div class="max-w-6xl mx-auto p-4 md:p-8 space-y-6">
    <!-- Master Vault Card -->
    <div
      class="bg-zinc-900 border border-white/10 rounded-3xl overflow-hidden shadow-2xl relative"
    >
      <!-- Header (Identity & Vault Status) -->
      <IdentityHeader />

      <!-- Main Content -->
      <div class="p-6 space-y-8">
        <!-- Friends Section -->
        <FriendsSection />

        <!-- Projects Section -->
        <ProjectsSection />
      </div>
    </div>
  </div>

  <!-- Dialogs -->
  <FriendModal />
  <FriendInviteDialog />
  <IdentityModal />
  <ProjectModals />
</main>
