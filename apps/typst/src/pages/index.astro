---
import ComingSoon from "@holi/ui/components/ComingSoon.astro";
import { getTranslations, languages } from "../i18n/translations";

import "../styles/app.css";

const lang = Astro.currentLocale || "en";
const t = getTranslations(lang);
---

<ComingSoon
  appName="typst"
  slogan={t.hero_slogan}
  metaTitle={t.meta_title}
  metaDescription={t.meta_description}
  lang={lang}
  languages={languages}
  comingSoonText={t.coming_soon}
  backHomeText={t.back_home}
  colorScheme="typst"
/>
